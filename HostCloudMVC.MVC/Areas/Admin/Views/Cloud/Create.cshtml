@using HostCloudMVC.Bl.ViewModels
@using HostCloudMVC.DAL.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@model CloudVM

<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Basic Form</h6>
        <form asp-area="Admin" asp-controller="Cloud" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Image</label>
                <input asp-for="ImgFile" class="form-control" id="exampleInputEmail1"
                       aria-describedby="emailHelp">
                       <span asp-validation-for="ImgFile"></span>
              
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Description"></span>
            </div>
           
            <button type="submit" class="btn btn-primary">Create</button>

            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>